- if position.errors.any?
  %p
    %ul
      - position.errors.full_messages.each do |message|
        %li= message
        
%form{action: action, method: 'post'}
  %label Name
  %input{type: 'text', name: 'name', value: position.name}
  %label Description
  %input{type: 'text', name: 'description', value: position.description}
  %input{type: 'submit', value: 'Save'}
